<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_root_layout"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeightLarge"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_item_author_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/list_item_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_author_profile_image"
        android:layout_toLeftOf="@+id/list_item_post_date"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColor="?android:textColorPrimary" />
    <TextView
        android:id="@+id/list_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list_item_subject"
        android:layout_below="@id/list_item_subject"
        android:layout_toLeftOf="@+id/list_item_star_image"
        android:singleLine="true"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/list_item_post_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list_item_subject"
        android:layout_below="@id/list_item_author"
        android:layout_toLeftOf="@+id/list_item_star_image"
        android:singleLine="true"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/list_item_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/list_item_star_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/list_item_post_date"
        android:clickable="true" />


</RelativeLayout>