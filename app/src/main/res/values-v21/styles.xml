<resources>

    <!-- Base application theme. -->
    <style name="CSHThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/csh_pink</item>
        <item name="colorPrimaryDark">@color/csh_pink_dark</item>
        <item name="colorAccent">@color/csh_pink</item>
        <item name="android:textColorPrimary">@color/primary_text_default_material_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_default_material_light</item>
        <item name="android:divider">@color/divider_light</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="drawer_header_background">@drawable/background_light_defaultimg</item>
        <item name="item_background_color">@color/background_material_light</item>
        <item name="star_color">@drawable/ic_star_border_light</item>
        <item name="label_icon_read">@drawable/ic_label_light_inactive_filled</item>
        <item name="home_icon">@drawable/ic_home_light_inactive</item>
        <item name="starred_icon">@drawable/ic_star_light_inactive</item>
        <item name="stickied_icon">@drawable/ic_pin_light_inactive</item>
        <item name="settings_icon">@drawable/ic_settings_light_inactive</item>
        <item name="about_icon">@drawable/ic_about_light_inactive</item>
        <item name="down_arrow_icon">@drawable/ic_arrow_down_light_active</item>
        <item name="divider_color">@color/divider_light</item>
        <item name="inactive_color">@color/primary_text_disabled_material_light</item>
        <item name="more_icon">@drawable/ic_more_light</item>
    </style>

    <style name="CSHThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/csh_pink</item>
        <item name="colorPrimaryDark">@color/csh_pink_dark</item>
        <item name="colorAccent">@color/csh_pink</item>
        <item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_default_material_dark</item>
        <item name="android:divider">@color/divider_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="drawer_header_background">@drawable/background_dark_defaultimg</item>
        <item name="item_background_color">@color/background_material_dark</item>
        <item name="star_color">@drawable/ic_star_border_dark</item>
        <item name="label_icon_read">@drawable/ic_label_dark_inactive_filled</item>
        <item name="home_icon">@drawable/ic_home_dark_inactive</item>
        <item name="starred_icon">@drawable/ic_star_dark_inactive</item>
        <item name="stickied_icon">@drawable/ic_pin_dark_inactive</item>
        <item name="settings_icon">@drawable/ic_settings_dark_inactive</item>
        <item name="about_icon">@drawable/ic_about_dark_inactive</item>
        <item name="down_arrow_icon">@drawable/ic_arrow_down_dark_active</item>
        <item name="divider_color">@color/divider_dark</item>
        <item name="inactive_color">@color/primary_text_disabled_material_dark</item>
        <item name="more_icon">@drawable/ic_more_dark</item>
    </style>

    <style name="ToolBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>
        <item name="android:background">@color/csh_pink</item>
    </style>

</resources>
